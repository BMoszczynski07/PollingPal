<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="12dp"
    android:padding="12dp"
    android:background="@drawable/rounded_corners"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <View
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="#000"
            />
        
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="7pt"
                android:text="Lorem ipsum"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="7pt"
                android:textColor="#737373"
                android:text="02.02.2024"
                />

        </LinearLayout>
        
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras tincidunt lacinia augue, vitae posuere est volutpat vitae. Pellentesque sagittis semper hendrerit. Nam cursus at sapien blandit volutpat. Aliquam lorem diam, ullamcorper quis risus et, gravida facilisis magna. Duis blandit sed mi et pellentesque. Proin sed tortor metus."
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:layout_width="8pt"
            android:layout_height="8pt"
            android:src="@drawable/heart_solid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="24dp"
            android:textSize="9pt"
            android:textColor="#e6233e"
            />

        <ImageView
            android:layout_width="8pt"
            android:layout_height="8pt"
            android:src="@drawable/message_solid"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="9pt"
            android:textColor="#5e84c3"
            />
    </LinearLayout>
</LinearLayout>