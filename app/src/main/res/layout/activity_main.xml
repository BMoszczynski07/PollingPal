<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#69aec9"
        android:gravity="center">

        <!-- Napis -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PollingPal"
            android:textSize="8pt"
            android:textColor="#000000"
            android:layout_marginRight="5pt"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="110dp"
            android:layout_height="42dp"
            android:text="Zaloguj się"
            android:textSize="12dp"
            android:layout_marginRight="2pt"
            android:onClick="switchToLoginPage"
            />

        <Button
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:textSize="12dp"
            android:text="Zarejestruj się"
            android:onClick="switchToRegisterPage"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            >
            <ImageView
                android:layout_width="12pt"
                android:layout_height="12pt"
                android:src="@drawable/arrow_left_solid"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Wyjdź z komentarzy"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#b8d2e3"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12pt"
            android:gravity="center"
            android:text="Zostaw komentarz"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:layout_marginRight="40dp"
                android:text="Odpowiadasz użytkownikowi @Loremipsum1"
                android:textColor="#2d9ac4"
                />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/circle_xmark_solid"
                android:onClick="turnOffResponseMode"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <View
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="#000" />

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:hint="Treść komentarza" />
            </LinearLayout>

            <Button
                android:layout_marginTop="12dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Opublikuj"
                android:onClick="addComment()" />
        </LinearLayout>

        </LinearLayout>
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <include layout="@layout/comment" />
                <include layout="@layout/comment" />
                <include layout="@layout/comment_res" />
                <include layout="@layout/comment" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="27dp"
            android:text="Wyszukaj ankietę" />

        <EditText
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Treść ankiety..." />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center">

            <Button
                android:layout_width="165dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:onClick="findPolls"
                android:text="Wyszukaj ankietę" />

            <Button
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:onClick="switchToAddPollPage"
                android:text="+ Dodaj ankietę" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/poll" />

                <include layout="@layout/poll" />

                <include layout="@layout/poll" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</LinearLayout>