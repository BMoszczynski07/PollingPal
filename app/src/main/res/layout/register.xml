<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:visibility="visible"
    android:id="@+id/site_login_page"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center"
        android:text="Zarejestruj się do PollingPal"
        android:textSize="13pt" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="10pt"
        android:text="\@"
        />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/site_register_login_input"
        android:hint="nazwa użytkownika"
        />
    </LinearLayout>

    <EditText
        android:layout_width="300dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:id="@+id/site_register_pass_input"
        android:layout_marginTop="12dp"
        android:hint="hasło"
        />

    <EditText
        android:layout_width="300dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:id="@+id/site_register_confirm_pass_input"
        android:layout_marginBottom="12dp"
        android:hint="potwierdź hasło"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/site_register_email_input"
        android:hint="e-mail"
        />

    <include layout="@layout/login_error" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:id="@+id/site_user_register"
            android:text="Zarejestruj się" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:id="@+id/site_user_login"
            android:text="Zaloguj się" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="9pt"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/site_register_return_to_main_page"
        android:text="Wróć do strony głównej" />

</LinearLayout>