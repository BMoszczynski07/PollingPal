<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/site_main_page"
    android:visibility="visible"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="27dp"
            android:text="Wyszukaj ankietę" />

        <EditText
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/search_polls"
            android:hint="Treść ankiety..." />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center">

            <Button
                android:layout_width="165dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:onClick="searchPolls"
                android:backgroundTint="@color/black"
                android:id="@+id/search_polls_btn"
                android:text="Wyszukaj ankietę" />

            <Button
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:onClick="switchToAddPollPage"
                android:backgroundTint="@color/black"
                android:text="+ Dodaj ankietę" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <include layout="@layout/db_error_layout" />

                <include layout="@layout/loading" />

                <LinearLayout
                    android:id="@+id/site_polls_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    ></LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>