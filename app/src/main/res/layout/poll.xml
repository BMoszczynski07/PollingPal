<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#9eccde"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@color/black"
            android:layout_margin="8dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Bartosz Moszczyński" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textColor="#787878"
                android:text="02.02.2024" />
        </LinearLayout>

    </LinearLayout>

    <!-- opcje ankiety (przed zaznaczeniem) -->
    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:text="Opcja 1"
            android:textColor="#fff"
            android:gravity="center"
            android:padding="8dp"
            android:background="#3081a1"
            android:layout_margin="8dp"
            android:onClick="selectOption(0, 0)"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="7pt"
        android:text="Opcja 2"
        android:textColor="#fff"
        android:padding="8dp"
        android:gravity="center"
        android:background="#3081a1"
        android:layout_margin="8dp"
        android:onClick="selectOption(0, 0)"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="#c70c4d"
            android:text="Lubię to (20)"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#0f79ba"
            android:text="Komentarze (13)"
            />
    </LinearLayout>

    <!-- opcje ankiety (po zaznaczeniu) -->

</LinearLayout>