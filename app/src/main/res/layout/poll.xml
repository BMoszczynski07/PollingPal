<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/poll"
    android:background="@drawable/rounded_corners"
    android:padding="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/poll_pic"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="8dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/poll_user"
                android:text="Bartosz Moszczyński" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textColor="#787878"
                android:id="@+id/poll_date"
                android:text="02.02.2024" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor?"
        android:gravity="center"
        android:textSize="9pt"
        android:id="@+id/poll_question"
        />

    <!-- opcje ankiety (przed zaznaczeniem) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/poll_options"
    >

        <!-- opcje ankiety (po zaznaczeniu) -->

        <include layout="@layout/poll_selected" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:gravity="center"
        android:layout_height="wrap_content">
<!--   TODO: Change the layout of this. Instead of "Lubię to" add heart icon and instead of "Komentarze" add a comment icon     -->
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="#c70c4d"
            android:id="@+id/poll_hearts"
            android:text="Lubię to (20)"
            android:onClick="pollLike"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#0f79ba"
            android:id="@+id/poll_comments"
            android:text="Komentarze (13)"
            android:onClick="showComments"
            />
    </LinearLayout>

</LinearLayout>